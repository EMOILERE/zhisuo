.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  padding: 30rpx;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: slideIn 0.3s ease forwards;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-group:nth-child(1) { animation-delay: 0.1s; }
.form-group:nth-child(2) { animation-delay: 0.2s; }
.form-group:nth-child(3) { animation-delay: 0.3s; }
.form-group:nth-child(4) { animation-delay: 0.4s; }

.label {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

/* 分类选择 */
.category-scroll {
  white-space: nowrap;
  display: flex;
  padding: 4rpx;
  margin: 0 -4rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f7fa;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #3498db;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
  transform: translateY(-2rpx);
}

.category-item:active {
  transform: scale(0.95);
}

/* 内容输入 */
.content-input {
  width: 100%;
  height: 400rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #2c3e50;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #e8edf2;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.content-input:focus {
  border-color: #3498db;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

.word-count {
  font-size: 24rpx;
  color: #95a5a6;
  text-align: right;
  margin-top: 12rpx;
}

/* 标签输入 */
.tag-input-container {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #e8edf2;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: rgba(52, 152, 219, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.tag-item:active {
  transform: scale(0.95);
}

.tag-text {
  font-size: 26rpx;
  color: #3498db;
  font-weight: 500;
}

.tag-delete {
  font-size: 24rpx;
  color: #95a5a6;
  margin-left: 8rpx;
  padding: 0 4rpx;
  transition: all 0.3s ease;
}

.tag-delete:active {
  color: #e74c3c;
  transform: scale(1.2);
}

.tag-input {
  font-size: 28rpx;
  color: #2c3e50;
  padding: 12rpx 0;
  width: 100%;
}

/* 任务选择 */
.task-picker {
  background: #f8fafc;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e8edf2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.task-picker:active {
  background: #fff;
  border-color: #3498db;
}

.placeholder {
  color: #95a5a6;
}

.picker-arrow {
  color: #95a5a6;
  font-size: 32rpx;
  transition: transform 0.3s ease;
}

.task-picker:active .picker-arrow {
  transform: rotate(90deg);
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
  padding: 0 20rpx;
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.96);
}

.btn-cancel {
  background: #f5f6f7;
  color: #7f8c8d;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-submit {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(52, 152, 219, 0.3);
}

/* 占位符样式 */
.content-input::placeholder {
  color: #95a5a6;
}

.tag-input::placeholder {
  color: #95a5a6;
} 