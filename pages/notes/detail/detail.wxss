.related-task {
  margin-bottom: 30rpx;
  animation: fadeIn 0.7s ease;
}

.task-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* æ·»åŠ ä»»åŠ¡å¡ç‰‡èƒŒæ™¯æ•ˆæœ */
.task-card::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, rgba(52, 152, 219, 0.1), transparent);
  border-radius: 0 24rpx 0 120rpx;
}

