  font-size: 24rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(5px);
}

.date-label {
  color: rgba(255, 255, 255, 0.8);
}

.date {
  font-family: 'DIN Alternate', sans-serif;
  letter-spacing: 1rpx;
}

