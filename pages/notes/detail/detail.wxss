.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
  animation: fadeIn 0.6s ease;
}

.tag {
  font-size: 26rpx;
  color: #3498db;
  background: rgba(52, 152, 219, 0.08);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.tag:active {
  transform: scale(0.95);
  background: rgba(52, 152, 219, 0.15);
}

.tag::before {
  content: '#';
  color: #3498db;
  font-weight: bold;
}

