.container {
  min-height: 100vh;
  background-color: #f6f8fa;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #2c3e50, #3498db);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(52, 152, 219, 0.2);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 60%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
  100% { transform: translateY(0); }
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.version {
  font-size: 28rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(5px);
  position: relative;
  z-index: 1;
}

.content {
  padding: 32rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  animation: slideUp 0.5s ease forwards;
  transform: translateY(30rpx);
  opacity: 0;
}

.section:nth-child(1) { animation-delay: 0.1s; }
.section:nth-child(2) { animation-delay: 0.2s; }
.section:nth-child(3) { animation-delay: 0.3s; }

@keyframes slideUp {
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.section-title {
  font-size: 34rpx;
  color: #2c3e50;
  font-weight: bold;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.section-title::before {
  font-size: 36rpx;
}

.section:nth-child(1) .section-title::before {
  content: 'üë®‚Äçüíª';
}

.section:nth-child(2) .section-title::before {
  content: 'üì±';
}

.section:nth-child(3) .section-title::before {
  content: '‚ú®';
}

.developer-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  background: #f8fafc;
  padding: 40rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #3498db;
  margin: 20rpx 0;
}

.name {
  font-size: 40rpx;
  color: #3498db;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.school {
  font-size: 32rpx;
  color: #7f8c8d;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 0;
}

.school::before {
  content: 'üè´';
  font-size: 24rpx;
}

.description {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 2.2;
  text-align: justify;
  padding: 40rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border-left: 4rpx solid #3498db;
  letter-spacing: 4rpx;
  word-spacing: 8rpx;
  word-break: break-all;
  word-wrap: break-word;
  position: relative;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(52, 152, 219, 0.1);
  transition: all 0.3s ease;
  min-height: 200rpx;
  display: flex;
  align-items: center;
}

.description:hover {
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(52, 152, 219, 0.15);
}

.description::before,
.description::after {
  content: '"';
  position: absolute;
  font-size: 60rpx;
  color: rgba(52, 152, 219, 0.1);
  font-family: serif;
}

.description::before {
  top: -10rpx;
  left: 10rpx;
}

.description::after {
  bottom: -40rpx;
  right: 10rpx;
}

.description text {
  display: block;
  margin-bottom: 20rpx;
}

.description text:last-child {
  margin-bottom: 0;
}

.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 20rpx 0;
}

.feature-item {
  background: #f8fafc;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
  min-height: 120rpx;
}

.feature-item:active {
  transform: scale(0.98);
  background: #f0f4f8;
}

.feature-dot {
  width: 48rpx;
  height: 48rpx;
  background: #3498db;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  flex-shrink: 0;
}

.feature-text {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
  letter-spacing: 2rpx;
  line-height: 1.6;
  flex: 1;
  word-wrap: break-word;
}

.footer {
  text-align: center;
  padding: 48rpx 32rpx;
  animation: fadeIn 0.5s ease 0.5s forwards;
  opacity: 0;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

.copyright {
  font-size: 24rpx;
  color: #95a5a6;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.contact-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.4);
  transition: all 0.3s ease;
}

.contact-button:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.3);
}

.contact-icon {
  font-size: 48rpx;
  color: #fff;
}

@media screen and (min-width: 768px) {
  .feature-list {
    grid-template-columns: repeat(2, 1fr);
    gap: 40rpx;
  }

  .description {
    font-size: 32rpx;
    line-height: 2.4;
    padding: 50rpx;
  }
} 